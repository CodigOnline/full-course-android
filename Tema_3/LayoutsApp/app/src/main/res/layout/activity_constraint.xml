    <View
        android:id="@+id/v3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/teal_500"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/guia_horizontal_80"
        app:layout_constraintEnd_toEndOf="@id/guia_vertical_95"
        app:layout_constraintStart_toStartOf="@id/guia_vertical_5"

        app:layout_constraintVertical_bias="1"/>

    <View
        android:id="@+id/v4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/teal_500"
        app:layout_constraintBottom_toBottomOf="@id/guia_horizontal_95"
        app:layout_constraintEnd_toEndOf="@id/guia_vertical_95"
        app:layout_constraintStart_toStartOf="@id/guia_vertical_5"
        app:layout_constraintTop_toBottomOf="@id/v3"
        app:layout_constraintVertical_bias="1"/>


