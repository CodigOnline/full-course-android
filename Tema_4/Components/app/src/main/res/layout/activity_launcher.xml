<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_top_app_bar"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top App Bar"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_bottomappbar"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bottom App Bar"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_buttonActivity"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buttons"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_card"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cards"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dialog"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dialog"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fab"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Floating Actions Buttons"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_image"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Images"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_progress"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_selections"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selections"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_text_input"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text Input Layout"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_time"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date and Time"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>